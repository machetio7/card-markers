---
// Primary
const lightRed = "hsl(6, 100%, 98%)";
const orangeyYellow = "hsl(42, 100%, 97%)";
const greenTeal = "	hsl(173, 53%, 97%)";
const cobaltBlue = "hsl(240, 71%, 97%)";

//Gradients
const lightSlateBlueBackground = "hsl(252, 100%, 67%)";
const lightroyalbluebackground = "hsl(241, 81%, 54%)";
const violetBlueCircle = "hsla(256, 72%, 46%, 1)";
const persianBlueCircle = "hsla(241, 72%, 46%, 0)";

//Neutral
const white = "hsl(0, 0%, 100%)";
const paleBlue = "hsl(221, 100%, 96%)";
const lightLavender = "hsl(241, 100%, 89%)";
const darkGrayBlue = "hsl(224, 30%, 27%)";

//Fonts Size
const fontSize = "18px";

//CardColorText
const reactionText = "hsl(355, 44%, 60%)";
const memoryText = "hsl(39, 68%, 63%)";
const verbalText = "hsl(164, 52%, 40%)";
const visualText = "hsl(240, 56%, 42%)";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Card markers</title>
  </head>
  <body>
    <div class="Container">
      <main class="container__result">
        <h1 class="container__result__title">Your Result</h1>
        <div class="container__result__score">
          <p>
            76
            <span>of 100</span>
          </p>
        </div>
        <div class="container__result__description">
          <p>Great</p>
          <span>
            You scored higher than 65% of the people who have taken these tests.
          </span>
        </div>
      </main>

      <section class="container__summary">
        <h2 class="container__summary__title">Summary</h2>
        <div class="container__summary__card">
          <div>
            <figure>
              <img
                src="./public/assets/icon-reaction.svg"
                alt="icon reaction"
              />
            </figure>
            <p>Reaction</p>
          </div>
          <p>80 <span>/ 100</span></p>
        </div>
		<div class="container__summary__card--two">
			<div>
			  <figure>
				<img
				  src="./public/assets/icon-memory.svg"
				  alt="icon memory"
				/>
			  </figure>
			  <p>Memory</p>
			</div>
			<p>92 <span>/ 100</span></p>
		  </div>
		  <div class="container__summary__card--three">
			<div>
			  <figure>
				<img
				  src="./public/assets/icon-verbal.svg"
				  alt="icon verbal"
				/>
			  </figure>
			  <p>Verbal</p>
			</div>
			<p>61 <span>/ 100</span></p>
		  </div>
		  <div class="container__summary__card--four">
			<div>
			  <figure>
				<img
				  src="./public/assets/icon-visual.svg"
				  alt="icon visual"
				/>
			  </figure>
			  <p>Visual</p>
			</div>
			<p>72 <span>/ 100</span></p>
		  </div>
        <a href="" class="container__summary__button"> Continue</a>
      </section>
    </div>

    <div class="attribution">
      Challenge by <a
        href="https://www.frontendmentor.io?ref=challenge"
        target="_blank">Frontend Mentor</a
      >. Coded by <a href="#">Jose Cruz</a>.
    </div>

    <style
      define:vars={{
        lightRed,
        orangeyYellow,
        greenTeal,
        cobaltBlue,
        lightSlateBlueBackground,
        lightroyalbluebackground,
        violetBlueCircle,
        persianBlueCircle,
        white,
        paleBlue,
        lightLavender,
        darkGrayBlue,
        fontSize,
        reactionText,
        memoryText,
        verbalText,
        visualText,
      }}
    >
      @import url("https://fonts.googleapis.com/css2?family=Hanken+Grotesk:wght@500;700;800&display=swap");

      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: "Hanken Grotesk", sans-serif;
      }
      .container {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100vh;
      }

      .container__result {
        background-image: linear-gradient(
          var(--lightSlateBlueBackground),
          var(--lightroyalbluebackground)
        );
        height: 45vh;
        border-bottom-left-radius: 40px;
        border-bottom-right-radius: 40px;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        padding: 10px 60px 10px 60px;
      }

      .container__result__title {
        color: var(--lightLavender);
        font-size: var(--FontZise);
      }

      .container__result__score {
        width: 125px;
        height: 125px;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-image: linear-gradient(
          var(--violetBlueCircle),
          var(--persianBlueCircle)
        );
      }

      .container__result__score p {
        font-size: 50px;
        font-weight: bold;
        color: var(--white);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .container__result__score p span {
        color: var(--lightLavender);
        font-size: 14px;
      }

      .container__result__description {
        color: var(--white);
        text-align: center;
      }

      .container__result__description p {
        font-size: 22px;
        font-weight: bold;
        letter-spacing: 1px;
        padding-bottom: 10px;
      }

      .container__result__description span {
        color: var(--lightLavender);
		font-size: var(--fontSize);
      }



	  /* styles Summary */

      .container__summary {
        background-color: var(--white);
        height: 55vh;
        padding: 20px;
      }

      .container__summary__title {
        color: var(--darkGrayBlue);
        padding-bottom: 20px;
      }

      .container__summary__card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--lightRed);
        padding: 15px 15px;
		margin-bottom: 10px;
		border-radius: 15px;
      }

      .container__summary__card div {
        display: flex;
        gap: 15px;
      }

      .container__summary__card div p {
        color: var(--reactionText);
      }

      .container__summary__card div figure img {
        width: 100%;
      }

      .container__summary__card p span {
        color: var(--lightLavender);
      }

      .container__summary__button {
        border: 1px solid var(--darkGrayBlue);
        padding: 15px 120px; 
        background-color: var(--darkGrayBlue); 
        color: var(--white); 
        text-decoration: none; 
        border-radius: 50px;
		display: block;
		font-size: var(--fontSize);
		letter-spacing:1px;
		text-align: center;
		margin-top: 20px;
      }


	  /* style two card */

	  .container__summary__card--two {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--orangeyYellow);
        padding: 15px 15px;
		margin-bottom: 10px;
		border-radius: 15px;
      }

      .container__summary__card--two div {
        display: flex;
        gap: 15px;
      }

      .container__summary__card--two div p {
        color: var(--memoryText);
      }

      .container__summary__card--two div figure img {
        width: 100%;
      }

      .container__summary__card--two p span {
        color: var(--lightLavender);
      }


	  /* style three card */

	  .container__summary__card--three {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--greenTeal);
        padding: 15px 15px;
		margin-bottom: 10px;
		border-radius: 15px;
      }

      .container__summary__card--three div {
        display: flex;
        gap: 15px;
      }

      .container__summary__card--three div p {
        color: var(--verbalText);
      }

      .container__summary__card--three div figure img {
        width: 100%;
      }

      .container__summary__card--three p span {
        color: var(--lightLavender);
      }

	  /* style four card */
	  .container__summary__card--four {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--cobaltBlue);
        padding: 15px 15px;
		margin-bottom: 10px;
		border-radius: 15px;
      }

      .container__summary__card--four div {
        display: flex;
        gap: 15px;
      }

      .container__summary__card--four div p {
        color: var(--visualText);
      }

      .container__summary__card--four div figure img {
        width: 100%;
      }

      .container__summary__card--four p span {
        color: var(--lightLavender);
      }

    </style>
  </body>
</html>
